{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node"
  },
  "exclude": ["dist"]
}
